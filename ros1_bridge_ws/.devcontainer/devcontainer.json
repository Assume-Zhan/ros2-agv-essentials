/* For reference, see https://aka.ms/devcontainer.json */
{
    "name": "ros1_bridge",
    /* Dockerfile settings */
    "build": {
        "dockerfile": "Dockerfile"
    },
    /* Docker run arguments */
    "runArgs": [
        "-it",
        "--network=host",
        "--ipc=host"
    ],
    /* Privileged mode */
    "privileged": true,
    /* Docker mounts */
    "mounts": [
        {
            // Shared Memory
            "source": "/dev/shm",
            "target": "/dev/shm",
            "type": "bind"
        }
    ],
    /* workspace settings */
    "workspaceFolder": "/"
}