/* For reference, see https://aka.ms/devcontainer.json */
{
    "name": "Husky Simulation",
    "dockerComposeFile": "../docker/docker-compose.yaml",
    "service": "ros2-husky",
    // Workspace settings
    "workspaceFolder": "/home/ros2-agv-essentials/husky_ws",
    // Vscode extensions
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-themes",
                "twxs.cmake",
                "donjayamanne.python-extension-pack",
                "eamodio.gitlens",
                "ms-iot.vscode-ros"
            ]
        }
    },
    // Lifecycle scripts
    "postCreateCommand": "${containerWorkspaceFolder}/.devcontainer/postCreateCommand.sh"
}