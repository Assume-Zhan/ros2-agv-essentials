/* Reference: https://aka.ms/devcontainer.json */
{
    "name": "ROS2 and VLP-16 Container",
    "dockerComposeFile": "../docker/docker-compose.yaml",
    "service": "vlp-ws",

    // workspace settings
    "workspaceFolder": "/home/ros2-agv-essentials/vlp_ws",

    // Vscode extensions
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-themes",
                "twxs.cmake",
                "donjayamanne.python-extension-pack",
                "eamodio.gitlens",
                "ms-iot.vscode-ros"
            ]
        }
    },
    
    // Lifecycle scripts
    "postCreateCommand": "${containerWorkspaceFolder}/.devcontainer/postCreateCommand.sh"
}